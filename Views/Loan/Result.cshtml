@model LoanCalculator.Models.LoanResultModel

<!DOCTYPE html>
<html>
<head>
    <title>Результаты расчета займа</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1>График платежей</h1>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Номер платежа</th>
                    <th>Дата платежа</th>
                    <th>Платеж по телу</th>
                    <th>Платеж по процентам</th>
                    <th>Остаток долга</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var payment in Model.Schedule)
                {
                        <tr>
                            <td>@payment.PaymentNumber</td>
                            <td>@payment.PaymentDate.ToString("dd.MM.yyyy")</td>
                            <td>@payment.PrincipalPayment.ToString("F2")</td>
                            <td>@payment.InterestPayment.ToString("F2")</td>
                            <td>@payment.RemainingBalance.ToString("F2")</td>
                        </tr>
                }
            </tbody>
        </table>

        <div class="mt-3">
            <h3>Итоговая переплата: @Model.TotalOverpayment.ToString("F2")</h3>
            <h3>Ежемесячный платеж: @Model.MonthlyPayment.ToString("F2")</h3>
        </div>
    </div>
</body>
</html>
